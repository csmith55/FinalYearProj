<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.com.project.csmith.finalyearproject">


    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:maxSdkVersion="21"
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />


    <application

        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="app.com.project.csmith.finalyearproject.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.com.project.csmith.finalyearproject.MainActivity" />
        </activity>


        <activity
            android:name="app.com.project.csmith.finalyearproject.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="app.com.project.csmith.finalyearproject.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.com.project.csmith.finalyearproject.MainActivity" />
        </activity>
        <activity
            android:name="app.com.project.csmith.finalyearproject.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="app.com.project.csmith.finalyearproject.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.com.project.csmith.finalyearproject.MainActivity" />
        </activity>
    </application>

</manifest>
